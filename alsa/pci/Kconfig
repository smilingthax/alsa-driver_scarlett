menu "PCI devices"
	depends on SND!=n && PCI

config SND_PDPLUS
	tristate "Sek'D/Marian Prodif Plus"
	depends on SND
	select SND_PCM
	help
	  Say Y here to include support for Sek'D/Marian Prodif Plus
	  soundcards.

	  To compile this driver as a module, choose M here: the module
	  will be called snd-pdplus.

config SND_ASIHPI
	tristate "AudioScience ASIxxxx"
	depends on SND && ASIHPK
	select SND_PCM
	help
	  Say 'Y' or 'M' to include support for AudioScience ASIxxxx soundcards.

config SND_PCXHR
	tristate "Digigram PCXHR"
	depends on SND
	select SND_PCM
	select SND_HWDEP
	help
	  Say Y here to include support for Digigram PCXHR boards.

	  To compile this driver as a module, choose M here: the module
	  will be called snd-pcxhr.

config SND_DARLA20
	tristate "(Echoaudio) Darla20"
	depends on SND
	depends on FW_LOADER
	select SND_PCM
	help
	  Say 'Y' or 'M' to include support for Echoaudio Darla.

	  To compile this driver as a module, choose M here: the module
	  will be called snd-darla20

